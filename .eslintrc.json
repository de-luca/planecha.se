{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "plugins": [
    "jest"
  ],
  "extends": [
    "plugin:vue/vue3-essential",
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "rules": {
    "no-plusplus": ["off"],
    "no-restricted-syntax": ["off"],
    "class-methods-use-this": ["off"],
    "import/prefer-default-export": ["off"],
    "no-debugger": ["error"],
    "comma-dangle": ["error", "always-multiline"],
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  },
  "overrides": [
    {
      "files": ["**.spec.ts"],
      "rules": {
        "dot-notation": ["off"]
      }
    }
  ]
}
